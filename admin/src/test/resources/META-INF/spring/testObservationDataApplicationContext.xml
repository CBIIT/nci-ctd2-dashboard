<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:batch="http://www.springframework.org/schema/batch"
		xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
							http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <import resource="classpath*:META-INF/spring/adminApplicationContext.xml" />
  <import resource="classpath*:META-INF/spring/observationDataSharedApplicationContext.xml" />
  <context:component-scan base-package="gov.nih.nci.ctd2.dashboard.importer.internal" />

  <batch:job id="testTierOneObservationDataImporterJob">
	<batch:step id="tierOneObservationDataStep" parent="observationDataStep">
	  <batch:tasklet>
		<batch:chunk reader="tierOneObservationDataReader" processor="observationDataProcessor" writer="observationDataWriter"/>
	  </batch:tasklet>
	</batch:step>
  </batch:job>

  <bean name="tierOneObservationDataReader" class="org.springframework.batch.item.file.FlatFileItemReader">
	<property name="resource" value="classpath:test-tier-1-observation-data.tsv" />
    <property name="lineMapper" ref="tierOneObservationDataMapper" />
	<property name="linesToSkip" value="1" />
  </bean>

  <bean name="tierOneObservationDataMapper" class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
	<property name="fieldSetMapper" ref="observationDataMapper" />
	<property name="lineTokenizer" ref="tierOneObservationDataLineTokenizer" />
  </bean>

  <bean name="tierOneObservationDataLineTokenizer" class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer" >
	<property name="delimiter" value="\u0009"/>
	<property name="names" value="submission_center,submission_date,template_name,cell_line_subset,cell_line_exclusion,feature_dataset,compound_name,entrez_gene_id,cell_lineage,number_of_cell_lines,number_of_mutant_cell_lines,enrichment_direction,log_fdr,response_image_path,feature_image_path,nci_portal,gct_path"/>
  </bean>

  <!-- the following beans are not used during testing - only required for proper loading of context files -->

  <!-- broad compound sensitivity enrichment -->
  <bean name="broadCompoundSensitivityEnrichmentReader" class="org.springframework.batch.item.file.FlatFileItemReader">
    <property name="lineMapper" ref="broadCompoundSensitivityEnrichmentLineMapper" />
  </bean>

  <!-- columbia signaling analysis -->
  <bean name="columbiaSignalingAnalysisReader" class="org.springframework.batch.item.file.FlatFileItemReader">
    <property name="lineMapper" ref="columbiaSignalingAnalysisLineMapper" />
  </bean>

  <!-- columbia differential representation analysis -->
  <bean name="columbiaDifferentialRepresentationAnalysisReader" class="org.springframework.batch.item.file.FlatFileItemReader">
    <property name="lineMapper" ref="columbiaDifferentialRepresentationAnalysisLineMapper" />
  </bean>

  <!-- columbia master regulator analysis with shRNA knockdown -->
  <bean name="columbiaMasterRegulatorAnalysisReader" class="org.springframework.batch.item.file.FlatFileItemReader">
	<property name="lineMapper" ref="columbiaMasterRegulatorAnalysisLineMapper" />
  </bean>

</beans>
